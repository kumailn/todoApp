<% include partials/header %>

<style>
    .formbutton {
        margin-bottom: 1em;
    }
</style>

<div class="container" id="login" style="width: 20%">
    <form action="/login" method="post">
        <div class="form-group">
            <label for="exampleInputEmail1">Email address</label>
            <input type="email" class="form-control" name="username" aria-describedby="emailHelp" placeholder="Enter email">
            <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
        </div>
        <div class="form-group">
            <label for="exampleInputPassword1">Password</label>
            <input type="password" class="form-control" name="password" placeholder="Password">
        </div>
        <input type="submit" value="login" class="btn btn-primary btn-lg formbutton" name="login">
        <input type="submit" value="signup" class="btn btn-primary btn-lg formbutton" name="signup">
    </form>
</div>

<% include partials/footer %>
